<Window
    x:Class="LLC_MOD_Toolbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LLC_MOD_Toolbox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:LLC_MOD_Toolbox.ViewModels"
    xmlns:views="clr-namespace:LLC_MOD_Toolbox.Views"
    Title="都市零协会工具箱"
    Width="960"
    Height="600"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Assets/Fonts/#Source Han Sans CN"
    FontWeight="Medium"
    Foreground="#FFFFEED4"
    Loaded="Window_Loaded"
    MouseDown="WindowDragMove"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    MouseLeftButtonUp="Window_MouseLeftButtonUp"
    ResizeMode="CanMinimize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="NoHover" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Black"
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BlackWhite" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Black"
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  两端对齐的 TextBlock 样式  -->
        <Style x:Key="JustifiedHeaderStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="#FFFFEED4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Assets/Fonts/#lianmengqiyilushuaizhengruiheiti" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Justify" />
            <Setter Property="Width" Value="100" />
        </Style>
        <Style x:Key="Information" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Assets/Fonts/#Source Han Sans CN" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="#FFFFEED4" />
        </Style>

        <!--  TabItem 自定义模板  -->
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Style="{StaticResource JustifiedHeaderStyle}" Text="{Binding}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Border
                                Name="MainBorder"
                                Background="Transparent"
                                BorderBrush="Transparent">
                                <ContentPresenter
                                    Margin="10"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    ContentSource="Header" />
                            </Border>
                            <!--  选中状态的下划线  -->
                            <Border
                                Name="SelectionIndicator"
                                Height="2"
                                VerticalAlignment="Bottom"
                                Background="Transparent" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="SelectionIndicator" Property="Background" Value="#FFDAA520" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border CornerRadius="20,20,20,20">
        <Border.Background>
            <ImageBrush ImageSource="Assets/Images/Background.png" Stretch="UniformToFill" />
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="39*" />
                <RowDefinition Height="161*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.Background>
                    <ImageBrush ImageSource="Assets/Images/TitleBar.png" Stretch="Uniform" />
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="ZALogo"
                    Width="123"
                    Height="123"
                    Margin="31,0,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    d:Visibility="Visible"
                    Source="Assets/Images/ZALogoA.png"
                    Visibility="Collapsed" />
                <Image
                    x:Name="MinimizeHover"
                    Grid.Column="1"
                    Width="81"
                    Height="80"
                    Margin="0,0,16,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Panel.ZIndex="5"
                    IsHitTestVisible="False"
                    Opacity="0"
                    Source="Assets/Images/MinimizeHover.png" />
                <Button
                    Grid.Column="1"
                    Width="80"
                    Height="78"
                    Margin="0,0,17,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Click="MinimizeButtonClick"
                    Opacity="1"
                    Style="{StaticResource NoHover}">
                    <Button.Content>
                        <Image
                            Width="80"
                            Height="78"
                            Source="Assets/Images/Minimize.png" />
                    </Button.Content>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="MinimizeHover"
                                        Storyboard.TargetProperty="Opacity"
                                        From="0"
                                        To="1"
                                        Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="MinimizeHover"
                                        Storyboard.TargetProperty="Opacity"
                                        From="1"
                                        To="0"
                                        Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
                <Image
                    x:Name="CloseHover"
                    Grid.Column="2"
                    Width="81"
                    Height="80"
                    Margin="0,0,57,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Panel.ZIndex="5"
                    IsHitTestVisible="False"
                    Opacity="0"
                    RenderTransformOrigin="3.642,0.537"
                    Source="Assets/Images/MinimizeHover.png" />
                <Button
                    Grid.Column="2"
                    Width="80"
                    Height="78"
                    Margin="0,0,58,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="CloseButtonClick"
                    Opacity="1"
                    Style="{StaticResource NoHover}">
                    <Button.Content>
                        <Image
                            Width="80"
                            Height="78"
                            Source="Assets/Images/Close.png" />
                    </Button.Content>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="CloseHover"
                                        Storyboard.TargetProperty="Opacity"
                                        From="0"
                                        To="1"
                                        Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="CloseHover"
                                        Storyboard.TargetProperty="Opacity"
                                        From="1"
                                        To="0"
                                        Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>

            </Grid>
            <Grid Grid.Row="1">

                <TabControl Grid.RowSpan="2" TabStripPlacement="Left">
                    <TabControl.Background>
                        <ImageBrush ImageSource="/Assets/Images/ControlBoard.png" />
                    </TabControl.Background>
                    <TabItem Header="安装">
                        <TabControl Background="Transparent">
                            <TabItem Header="自动安装">
                                <views:AutoInstaller x:Name="AutoInstallerPage" />
                            </TabItem>
                            <TabItem Header="手动安装">
                                <Grid x:Name="ManualInstallPage">
                                    <TextBlock Style="{StaticResource Information}" Text="手动安装功能尚未开启，敬请期待后续版本。" />
                                </Grid>
                            </TabItem>
                            <TabItem Header="覆盖安装">
                                <TextBlock Style="{StaticResource Information}" Text="文件覆盖功能尚未开启，敬请期待后续版本。" />
                            </TabItem>
                            <TabItem Header="抽卡模拟器">
                                <views:Gacha x:Name="GachaPage" />
                            </TabItem>
                        </TabControl>
                    </TabItem>
                    <TabItem Header="链接">
                        <views:Link x:Name="LinkPage" d:DataContext="{d:DesignInstance Type=viewmodels:LinkViewModel, IsDesignTimeCreatable=True}" />
                    </TabItem>
                    <TabItem Header="灰度测试">
                        <views:GrayTest />
                    </TabItem>
                    <TabItem Header="设置">
                        <views:Settings x:Name="SettingsPage" d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}" />
                    </TabItem>
                    <TabItem Header="关于">
                        <TextBlock Style="{StaticResource Information}" TextWrapping="Wrap">
                            都市零协会工具箱 (LLC_MOD_Toolbox) 是服务于都市零协会汉化模组 (LocalizeLimbusCompany) 的自动化安装工具。本软件使用库的许可证请于零协会官网 (https://www.zeroasso.top) 查看。<LineBreak />
                            - LLCMT工具箱<LineBreak />
                            - 代码实现：曾小皮、10291029<LineBreak />
                            - 美术设计：记得保存、玉佩（抽卡模拟器）<LineBreak />
                            - LLC翻译模组<LineBreak />
                            - 翻译文本：零协会翻译组全体译者<LineBreak />
                            - 汉化模组代码：奈芙Nephthys<LineBreak />
                            - 汉化模组字体：茜、北岚<LineBreak />
                            - 特别鸣谢<LineBreak />
                            - 服务器运维 &amp; 开发：曾小皮<LineBreak />
                            - 零协会广播局全体创作者<LineBreak />
                            - 翻译工具：Paratranz<LineBreak />
                            <LineBreak />
                            人无语言则茫然无依。<LineBreak />
                        </TextBlock>
                    </TabItem>
                </TabControl>

                <Grid
                    x:Name="EEPage"
                    Grid.Row="1"
                    Margin="62,55,54,32"
                    Panel.ZIndex="5"
                    Visibility="Collapsed">
                    <Image
                        x:Name="EEPageImage"
                        Width="630"
                        Height="330"
                        Margin="12,27,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />
                </Grid>


            </Grid>





        </Grid>
    </Border>
</Window>
