<UserControl
    x:Class="LLC_MOD_Toolbox.Views.AutoInstaller"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LLC_MOD_Toolbox.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:LLC_MOD_Toolbox.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AutoInstallerViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Background="Transparent"
            Command="{Binding ModInstallationCommand}">
            <Image Source="/Assets/Images/Install.png" />
        </Button>
        <ProgressBar
            Grid.Row="1"
            d:Value="100"
            Background="Transparent"
            Value="{Binding InstallationProgress}">
            <ProgressBar.Foreground>
                <ImageBrush ImageSource="pack://application:,,,/LLC_MOD_Toolbox;component/Assets/Images/FullProgress.png" Stretch="Uniform" />
            </ProgressBar.Foreground>
        </ProgressBar>
    </Grid>
</UserControl>
