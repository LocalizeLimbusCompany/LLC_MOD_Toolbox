<UserControl
    x:Class="LLC_MOD_Toolbox.Views.Gacha"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LLC_MOD_Toolbox.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:LLC_MOD_Toolbox.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:GachaViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <d:ImageBrush
            x:Key="GachaBrush"
            ImageSource="/Assets/Images/GachaBackground.png"
            Stretch="Uniform" />
    </UserControl.Resources>
    <Grid Background="{DynamicResource GachaBrush}">
        <ListBox Background="Transparent" />
        <Button
            Width="190"
            Height="60"
            Command="{Binding GachaCommand}"
            Content="开始抽卡" />
    </Grid>
</UserControl>
